public abstract class Item {
    private String name;

    // Konstruktor
    public Item(String name) {
        this.name = name;
    }

    // Getter
    public String getName() {
        return name;
    }

    // Abstrakt metod som alla subklasser måste implementera
    public abstract void use();
}

// Potion som helar spelaren
public class Potion extends Item {
    private int healingAmount;

    public Potion(String name, int healingAmount) {
        super(name);
        this.healingAmount = healingAmount;
    }

    @Override
    public void use() {
        System.out.println("Använder potion och helar " + healingAmount + " hälsopoäng!");
    }

    public int getHealingAmount() {
        return healingAmount;
    }
}

// Weapon som ökar spelarens skada
public class Weapon extends Item {
    private int damage;

    public Weapon(String name, int damage) {
        super(name);
        this.damage = damage;
    }

    @Override
    public void use() {
        System.out.println("Använder svärd som gör " + damage + " i skada!");
    }

    public int getDamage() {
        return damage;
    }
}
